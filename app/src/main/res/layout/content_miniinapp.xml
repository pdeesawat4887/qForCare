<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grdnt"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pacharapoldeesawat.demohospital.InAppActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="40dp">

            <Button
                android:id="@+id/inappbtn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/circle_manage"
                android:drawableTop="@drawable/ic_035_smartphone_2"
                android:paddingTop="20dp"
                android:text="@string/walkin"
                android:textColor="#f4f4f4"
                android:textSize="22sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:padding="30dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_010_time_2"
            android:alpha="0.85"/>
        <TextView
            android:id="@+id/remainQueue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:textColor="#2364AA"
            android:textSize="18sp"
            android:paddingBottom="12dp"
            android:text="@string/process"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:paddingBottom="90dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_folder"
            android:alpha="0.7"/>
        <TextView
            android:id="@+id/youQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:textColor="#2364AA"
            android:textSize="18sp"
            android:paddingBottom="10dp"
            android:text="@string/process"/>
    </LinearLayout>

</RelativeLayout>
